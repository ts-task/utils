{
  "name": "@ts-task/utils",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [],
  "main": "dist/ts-task-utils.umd.js",
  "module": "dist/ts-task-utils.es5.js",
  "typings": "dist/lib/ts-task-utils.d.ts",
  "files": [
    "dist"
  ],
  "author": "Gonza Gluzman <dggluz@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ts-task/utils"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "build": "tsls build --libraryName=ts-task-utils",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "test:types": "dtslint test/types/",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "g-cz",
    "semantic-releitase": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit-disabled": "lint-staged",
    "contributors-add": "all-contributors add",
    "contributors-generate": "all-contributors generate",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*(\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "testing-utils.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "testURL": "http://localhost/"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "@types/node": "^10.0.3",
    "all-contributors-cli": "^5.4.0",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "dtslint": "^0.3.0",
    "husky": "^0.14.0",
    "jest": "^29.3.1",
    "lint-staged": "^7.1.3",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.13.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^15.9.17",
    "ts-jest": "^29.0.3",
    "ts-node": "^6.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "tsls": "0.0.3",
    "typescript": "^2.8.0",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "@ts-task/task": "^1.0.0"
  }
}
